{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist/plugins",
    "rootDir": "plugins",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["plugins/**/*.ts", "src/shared/**/*.ts", "src/server/core/plugin-loader.ts", "src/server/core/scheduler.ts"],
  "exclude": ["node_modules"]
}
